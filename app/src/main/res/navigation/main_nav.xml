<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFrag">

    <fragment
        android:id="@+id/homeFrag"
        android:name="os.abuyahya.newsreader.fragment.HomeFrag"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFrag_to_articalFrag"
            app:destination="@id/articalFrag"
            />
    </fragment>
    <fragment
        android:id="@+id/articalFrag"
        android:name="os.abuyahya.newsreader.fragment.ArticalFrag"
        android:label="Article"
        tools:layout="@layout/fragment_article" >
        <argument
            android:name="webUrl"
            app:argType="string"
            app:nullable="true"/>
    </fragment>
</navigation>
